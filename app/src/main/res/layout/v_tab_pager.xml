<?xml version="1.0" encoding="utf-8"?>

<com.vsouhrada.android.lib.mflow.demo.functions.tab_indicator.TabView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    >

    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/predefined_inventory.position_overview.tab_page_indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.rd.PageIndicatorView
        android:id="@+id/pageIndicatorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        attrs:piv_animationType="thinWorm"
        attrs:piv_interactiveAnimation="true"
        attrs:piv_padding="24dp"
        attrs:piv_radius="12dp"
        attrs:piv_viewPager="@id/viewPager" />

</com.vsouhrada.android.lib.mflow.demo.functions.tab_indicator.TabView>